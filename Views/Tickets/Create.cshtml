@* In Views/Tickets/Create.cshtml *@
@model BTL.Models.Ticket

@{
    ViewData["Title"] = "Tạo vé mới";
}

<h1>Tạo vé mới cho sự kiện: @ViewBag.EventName</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Trường EventId được ẩn đi vì người dùng không cần nhập nó *@
            <input type="hidden" asp-for="EventId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên loại vé (Vd: Vé VIP, Vé Thường)</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Giá vé</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityAvailable" class="control-label">Số lượng vé có sẵn</label>
                <input asp-for="QuantityAvailable" class="form-control" />
                <span asp-validation-for="QuantityAvailable" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Tạo vé" class="btn btn-primary" />
                <a asp-controller="Events" asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-secondary">Quay lại chi tiết sự kiện</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}